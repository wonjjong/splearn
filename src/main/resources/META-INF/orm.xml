<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://www.hibernate.org/xsd/orm/mapping"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://www.hibernate.org/xsd/orm/mapping
                                            https://hibernate.org/xsd/orm/mapping/mapping-3.1.0.xsd">
    <mapped-superclass class="com.wonjjong.splearn.domain.AbstractEntity">
        <attributes>
            <id name="id">
                <column name="id" />
                <generated-value strategy="IDENTITY"/>
            </id>
        </attributes>
    </mapped-superclass>

    <entity class="com.wonjjong.splearn.domain.member.Member">
        <table name="member">
            <unique-constraint name="UK_MEMBER_EMAIL_ADDRESS">
                <column-name>email_address</column-name>
            </unique-constraint>
            <unique-constraint name="UK_MEMBER_DETAIL_ID">
                <column-name>detail_id</column-name>
            </unique-constraint>
        </table>
        <attributes>
            <!-- Embedded Email -->
            <embedded name="email"/>

            <basic name="nickname">
                <column length="100" nullable="false"/>
            </basic>

            <basic name="passwordHash">
                <column length="200" nullable="false"/>
            </basic>

            <basic name="status">
                <enumerated>STRING</enumerated>
                <column length="50" nullable="false"/>
            </basic>

            <one-to-one name="detail" fetch="LAZY">
                <cascade>
                        <cascade-all/>
                </cascade>
            </one-to-one>
        </attributes>
    </entity>

    <embeddable class="com.wonjjong.splearn.domain.member.Profile">
        <attributes>
            <basic name="address">
                <column name="profile_address" length="20"/>
            </basic>
        </attributes>
    </embeddable>

    <entity class="com.wonjjong.splearn.domain.member.MemberDetail">
        <table name="member_detail">
            <unique-constraint name="UK_MEMBER_DETAIL_PROFILE_ADDRESS">
                <column-name>profile_address</column-name>
            </unique-constraint>
        </table>

        <attributes>
            <embedded name="profile"/>

            <basic name="introduction">
                <column column-definition="TEXT"/>
            </basic>

            <basic name="registeredAt">
                <column nullable="false"/>
            </basic>

            <basic name="activatedAt"/>

            <basic name="deactivatedAt"/>

        </attributes>
    </entity>
</entity-mappings>